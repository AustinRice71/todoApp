{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (.NET) Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "program": "${workspaceFolder}/backend/src/Todo.Api.Controllers/bin/Debug/net10.0/Todo.Api.Controllers.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/src/Todo.Api.Controllers",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
